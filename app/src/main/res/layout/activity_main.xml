<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_china"
        app:layout_constraintLeft_toRightOf="@+id/btn_open"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/btn_china" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_english"
        app:layout_constraintLeft_toRightOf="@+id/btn_open"
        app:layout_constraintTop_toBottomOf="@+id/btn_china"
        android:id="@+id/btn_english" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/btn_down" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停"
        app:layout_constraintLeft_toLeftOf="@+id/btn_down"
        app:layout_constraintTop_toBottomOf="@+id/btn_down"
        android:id="@+id/btn_pause" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="继续"
        app:layout_constraintLeft_toLeftOf="@+id/btn_pause"
        app:layout_constraintTop_toBottomOf="@+id/btn_pause"
        android:id="@+id/btn_jixu" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除文件"
        app:layout_constraintLeft_toRightOf="@+id/btn_jixu"
        app:layout_constraintTop_toTopOf="@+id/btn_jixu"
        android:id="@+id/btn_delet" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="升级zip"
        app:layout_constraintLeft_toRightOf="@+id/btn_delet"
        app:layout_constraintTop_toTopOf="@+id/btn_delet"
        android:id="@+id/btn_zip" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度"
        app:layout_constraintLeft_toLeftOf="@+id/btn_jixu"
        app:layout_constraintTop_toBottomOf="@+id/btn_jixu"
        android:id="@+id/btn_press" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开扫描"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/btn_open"
        android:clickable="false"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭扫描"
        app:layout_constraintTop_toBottomOf="@+id/btn_open"
        app:layout_constraintLeft_toLeftOf="@+id/btn_open"
        android:id="@+id/btn_close"
        android:clickable="false"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始配对"
        app:layout_constraintTop_toBottomOf="@+id/btn_close"
        app:layout_constraintLeft_toLeftOf="@+id/btn_close"
        android:id="@+id/btn_startpair"
        android:clickable="false"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消配对"
        app:layout_constraintTop_toBottomOf="@+id/btn_startpair"
        app:layout_constraintLeft_toLeftOf="@+id/btn_startpair"
        android:clickable="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>